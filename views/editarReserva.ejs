</head>

<body>
  <!--  Body Wrapper -->
  <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
    data-sidebar-position="fixed" data-header-position="fixed">
    <!-- Sidebar Start -->
    <aside class="left-sidebar">
      <!-- Sidebar scroll-->
      <div>
        <div class="brand-logo d-flex align-items-center justify-content-between">
          <a href="/" class="text-nowrap logo-img">
            <img src="/images/logos/logo.svg" alt="" />
          </a>
          <div class="close-btn d-xl-none d-block sidebartoggler cursor-pointer" id="sidebarCollapse">
            <i class="ti ti-x fs-8"></i>
          </div>
        </div>
        <!-- Sidebar navigation-->
        <nav class="sidebar-nav scroll-sidebar" data-simplebar="">
          <ul id="sidebarnav">
            <li class="nav-small-cap">
              <iconify-icon icon="solar:menu-dots-linear" class="nav-small-cap-icon fs-4"></iconify-icon>
              <span class="hide-menu">Inicio</span>
            </li>
            <li class="sidebar-item">
              <a class="sidebar-link" href="/" aria-expanded="false">
                <iconify-icon icon="solar:map-bold-duotone"></iconify-icon>
                <span class="hide-menu">Tours</span>
              </a>
            </li>
            <li>
              <span class="sidebar-divider lg"></span>
            </li>
            <li class="nav-small-cap">
              <iconify-icon icon="solar:menu-dots-linear" class="nav-small-cap-icon fs-4"></iconify-icon>
              <span class="hide-menu">MENU</span>
            </li>
            <li class="sidebar-item">
              <a class="sidebar-link" href="/hoteles" aria-expanded="false">
                <iconify-icon icon="solar:buildings-3-bold-duotone"></iconify-icon>
                <span class="hide-menu">Hoteles</span>
              </a>
            </li>
            <li class="sidebar-item">
              <a class="sidebar-link" href="/clientes" aria-expanded="false">
                <iconify-icon icon="solar:users-group-rounded-bold-duotone"></iconify-icon>
                <span class="hide-menu">Clientes</span>
              </a>
            </li>
            <li class="sidebar-item">
              <a class="sidebar-link" href="/vuelos" aria-expanded="false">
                <iconify-icon icon="solar:rocket-bold-duotone"></iconify-icon>
                <span class="hide-menu">Vuelos</span>
              </a>
            </li>
            <li class="sidebar-item">
              <a class="sidebar-link" href="/reservas" aria-expanded="false">
                <iconify-icon icon="solar:calendar-mark-bold-duotone"></iconify-icon>
                <span class="hide-menu">Reservas</span>
              </a>
            </li>
            <li class="sidebar-item">
              <a class="sidebar-link" href="/boletos" aria-expanded="false">
                <iconify-icon icon="solar:ticket-bold-duotone"></iconify-icon>
                <span class="hide-menu">Boletos</span>
              </a>
            </li>
          </ul>

        </nav>
        <!-- End Sidebar navigation -->
      </div>
      <!-- End Sidebar scroll-->
    </aside>
    <!--  Sidebar End -->
    <!--  Main wrapper -->
    <div class="body-wrapper">
      <!--  Header Start -->
      <header class="app-header">
        <nav class="navbar navbar-expand-lg navbar-light">

          <div class="navbar-collapse justify-content-end px-0" id="navbarNav">
            <ul class="navbar-nav flex-row ms-auto align-items-center justify-content-end">
              <a href="/" target="_blank" class="btn btn-primary">Bienvenidx</a>
            </ul>
          </div>
        </nav>
      </header>
      <!--  Header End -->
      <div class="body-wrapper-inner">
        <div class="container-fluid">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title fw-semibold mb-4">Editar reserva</h5>
              <p class="mb-0">Edición de la reserva en el sistema</p>
              <br>
            

              <form action="/actualizar-reserva" method="POST">
                <div class="mb-3">
                    <label for="tourId" class="form-label">Tour:</label>
                    <select class="form-select" id="tourId" name="tourId" required>
                        <option value="" disabled>-- Seleccione tour --</option> <!-- Opción predeterminada -->
                        <% tours.forEach(tour => { %>
                            <% if (tour._id.toString() === reservation.tour._id.toString()) { %>
                                <option value="<%= tour._id %>" selected><%= tour.id %></option>
                            <% } else { %>
                                <option value="<%= tour._id %>"><%= tour.id %></option>
                            <% } %>
                        <% }); %>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="customerId" class="form-label">Cliente (DNI):</label>
                    <select class="form-select" id="customerId" name="customerId" required>
                        <option value="" disabled>-- Seleccione cliente --</option> <!-- Opción predeterminada -->
                        <% customers.forEach(customer => { %>
                            <% if (customer._id.toString() === reservation.customer._id.toString()) { %>
                                <option value="<%= customer._id %>" selected><%= customer.dni %> - <%= customer.full_name %></option>
                            <% } else { %>
                                <option value="<%= customer._id %>"><%= customer.dni %> - <%= customer.full_name %></option>
                            <% } %>
                        <% }); %>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="hotelId" class="form-label">Hotel:</label>
                    <select class="form-select" id="hotelId" name="hotelId" required>
                        <option value="" disabled>-- Seleccione hotel --</option> <!-- Opción predeterminada -->
                        <% hotels.forEach(hotel => { %>
                            <% if (hotel._id.toString() === reservation.hotel._id.toString()) { %>
                                <option value="<%= hotel._id %>" selected><%= hotel.name %></option>
                            <% } else { %>
                                <option value="<%= hotel._id %>"><%= hotel.name %></option>
                            <% } %>
                        <% }); %>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Precio:</label>
                    <input type="number" class="form-control" id="price" name="price" value="<%= reservation.price %>" required>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label for="dateStart" class="form-label">Fecha de Inicio:</label>
                        <input type="date" class="form-control" id="dateStart" name="dateStart" value="<%= reservation.date_start.toISOString().split('T')[0] %>" required>
                    </div>
                    <div class="col-md-4">
                        <label for="dateEnd" class="form-label">Fecha de Fin:</label>
                        <input type="date" class="form-control" id="dateEnd" name="dateEnd" value="<%= reservation.date_end ? reservation.date_end.toISOString().split('T')[0] : '' %>">
                    </div>
                    <div class="col-md-4">
                        <label for="datePurchase" class="form-label">Fecha de Compra:</label>
                        <input type="date" class="form-control" id="dateReservation" name="dateReservation" value="<%= reservation.date_reservation.toISOString().split('T')[0] %>" required>
                    </div>
                </div>
                <input type="hidden" name="reservationId" value="<%= reservation._id %>">
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            
            

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
  </div>
  </div>
  </div>
  <script src="/libs/jquery/dist/jquery.min.js"></script>
  <script src="/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/sidebarmenu.js"></script>
  <script src="/js/app.min.js"></script>
  <script src="/libs/simplebar/dist/simplebar.js"></script>
  <!-- solar icons -->
  <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
</body>

</html>